<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- mysql-connector-java 的绝对路径 -->
    <classPathEntry location="C:\Users\jh\.m2\repository\mysql\mysql-connector-java\8.0.17\mysql-connector-java-8.0.17.jar" />

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8" />

        <!-- 格式化java代码 -->
        <!--<property name="javaFormatter" value="com.dandelion.utils.DefaultJavaFormatter" />-->


        <!-- 配置生成pojo的序列化的插件，mybatis支持很多插件，这些插件都在 org.mybatis.generator.plugins包下  -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <!-- 配置生成pojo的toString()方法的插件，mybatis支持很多插件，这些插件都在 org.mybatis.generator.plugins包下 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />

        <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
        <!--<commentGenerator>-->
            <!--<property name="suppressAllComments" value="false"/>-->
            <!--&lt;!&ndash;生成的注释包含时间戳&ndash;&gt;-->
            <!--<property name="suppressDate" value="true"/>-->
        <!--</commentGenerator>-->
        <!-- 这里的type里写的是你的实现类的类全路径 -->
        <commentGenerator type="com.dandelion.utils.MyCommonGenerator"></commentGenerator>

        <!-- 配置数据源 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/family?serverTimezone=UTC"
                        userId="root"
                        password="Duan1217!">
        </jdbcConnection>

        <!-- 默认false时，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer
              当为 true时，把JDBC DECIMAL 和  NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver >
            <property name="forceBigDecimals" value="true" />
        </javaTypeResolver>

        <!-- 配置生成的javabean所存放的路径和包（使用绝对路径） -->
        <javaModelGenerator targetPackage="com.dandelion.bean" targetProject="C:\workspace\family\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 配置生成的**Mapper.xml文件所存放的路径和包（使用绝对路径） -->
        <sqlMapGenerator targetPackage="generator"  targetProject="C:\workspace\family\src\main\resources\mybatis">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 配置生成的**Mapper.java接口文件所存放的路径和包（使用绝对路径） -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.dandelion.dao.generator"  targetProject="C:\workspace\family\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 指定我们要操作的表明和生成的javabean类名 -->
        <table tableName="admin" domainObjectName="Admin" ></table>
        <table tableName="role" domainObjectName="Role" ></table>
        <table tableName="authority" domainObjectName="Authority" ></table>
    </context>
</generatorConfiguration>